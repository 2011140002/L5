<h1>Tweets一覧</h1>

<% @tweets.each do |t| %>
<%= t.message %>
｜投稿者：<%= t.user.uid %>
｜tweet_id：<%= t.id %><br>

<% if Like.find_by(tweet_id: t.id, user_id: session[:login_uid]) %>

<%= link_to 'いいね削除', "/likes/#{t.id}", method: :delete %>
<% else %>
<%= link_to 'いいね', likes_create_path(tweet_id: t.id), method: :post %>
<%end%>
<%= link_to '削除', "/tweets/#{t.id}", method: :delete %>
<br>
<% end %>
<br>
<%= link_to 'ツイートする', 'new' %><br>
<%= link_to 'ログアウト', top_logout_url %>