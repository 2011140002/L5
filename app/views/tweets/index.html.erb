<h1>Tweets一覧</h1>

<% @tweets.each do |t| %>
<%= t.message %><br>
投稿者：<%= t.user.uid %>

<% if Like.find_by(tweet_id: t.id) %>

<%= link_to 'いいね削除', "/likes/#{t.id}", method: :delete %>
<% else %>
<%= link_to 'いいね', likes_create_path(tweet_id: t.id), method: :post %>
<%end%>
<br>
<%= link_to 'ツイート削除', "/tweets/#{t.id}", method: :delete %>
<br>
<% end %>
<br><br>
<%= link_to 'ツイートする', 'new' %><br>
<%= link_to 'ログアウト', top_logout_url %>